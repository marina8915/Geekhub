<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>DWAnything</name>
	<version>1.02.0006</version>
	<description>Build custom modules to display any information stored in Joomla! database quickly and easily</description>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<author>Ilya Vikharev</author>
	<authoremail>info@docwriter.ru</authoremail>
	<authorurl>http://factory.docwriter.ru</authorurl>
	<copyright>Copyright (c) 2009-2010 Factory.DocWriter.Ru</copyright>
	<creationdate>30-Aug-2010</creationdate>
	<files folder="site">
		<folder>language</folder>
		<folder>tmpl</folder>
		<filename>CHANGELOG.php</filename>
		<filename>helper.php</filename>
		<filename module="mod_dwanything">mod_dwanything.php</filename>
	</files>
	<languages folder="site/language">
		<language tag="en-GB">en-GB.mod_dwanything.ini</language>
		<language tag="ru-RU">ru-RU.mod_dwanything.ini</language>
	</languages>
	<params>
		<param name="query" type="textarea" default="" label="SQL Query" description="SQL QUERY DESC" rows="6" cols="40"/>
		<param name="header" type="textarea" default="" label="Header" description="HEADER DESC" rows="6" cols="40"/>
		<param name="template" type="textarea" default="" label="Template" description="TEMPLATE DESC" rows="6" cols="40"/>
		<param name="footer" type="textarea" default="" label="Footer" description="FOOTER DESC" rows="6" cols="40"/>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX"/>
		<param type="spacer" default="Help and Support"/>
		<param type="spacer" default="LNK FAQ"/>
		<param type="spacer" default="LNK SUBMIT QUESTION"/>
		<param type="spacer" default="LNK SOLUTION REQUEST"/>
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached"/>
	</params>
<authorEmail>info@docwriter.ru</authorEmail><authorUrl>http://factory.docwriter.ru/</authorUrl></install>
